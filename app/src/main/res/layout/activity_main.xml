<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.shuaiqing.nwunet.activity.MainActivity">
    <!--提示-->
    <TextView
            android:id="@+id/textTop"
            android:layout_width="327dp"
            android:layout_height="106dp"
            android:text="Hello!请在状态栏添加NwuNet按钮，然后每次连上校园网之后,点它开启新世界吧！！！by shiqingk"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="39dp" android:textSize="18sp"/>
    <!--账号-->
    <TextView
            android:text="账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="66dp"
            android:id="@+id/textViewAccount"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="169dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextAccount"
            android:layout_alignParentEnd="true" android:layout_marginEnd="57dp"
            android:layout_alignTop="@+id/textViewAccount"/>
    <!--密码-->
    <TextView
            android:text="密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPasswd"
            android:textSize="24sp"
            android:layout_alignStart="@+id/textViewAccount" android:layout_alignParentTop="true"
            android:layout_marginTop="247dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextPasswd"
            android:textSize="18sp" android:layout_alignTop="@+id/textViewPasswd"
            android:layout_alignStart="@+id/editTextAccount"/>
    <!--登录-->
    <Button
            android:text="写入旧账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/submitBtn"
            android:layout_marginBottom="183dp"
            android:textSize="18sp" android:layout_alignStart="@+id/textTop"/>
    <Button
            android:text="读取"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/getDataBtn"
            android:textSize="18sp" android:layout_centerHorizontal="true" android:layout_above="@+id/submitBtn"/>
    <Button
            android:text="写入新账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitBtnNew"
            android:textSize="18sp" android:layout_alignEnd="@+id/textTop" android:layout_alignTop="@+id/submitBtn"/>

</RelativeLayout>
