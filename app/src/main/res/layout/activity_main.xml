<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.shuaiqing.nwunet.activity.MainActivity">
    <!--提示-->
    <View
            android:layout_width="wrap_content"
            android:layout_height="309dp" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:id="@+id/view_top"/>
    <TextView
            android:id="@+id/textTop"
            android:layout_width="349dp"
            android:layout_height="100dp"
            android:text="@string/hello_nwunet_by_shiqingk"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="24dp" android:textSize="18sp"/>
    <!--账号-->
    <TextView
            android:text="@string/value_account"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/textViewAccount"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="143dp" android:layout_alignEnd="@+id/submitBtn"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextAccount"
            android:layout_alignTop="@+id/textViewAccount" android:layout_alignStart="@+id/getDataBtn"/>
    <!--密码-->
    <TextView
            android:text="@string/value_passwd"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/textViewPasswd"
            android:textSize="24sp"
            android:layout_alignStart="@+id/textViewAccount" android:layout_alignParentTop="true"
            android:layout_marginTop="223dp"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextPasswd"
            android:textSize="18sp" android:layout_alignTop="@+id/textViewPasswd"
            android:layout_alignStart="@+id/editTextAccount"/>
    <!--底部按钮-->
    <Button
            android:text="@string/value_read_saved_account"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:id="@+id/getDataBtn"
            android:textSize="18sp" android:layout_centerHorizontal="true" android:layout_below="@+id/view_top"/>
    <Button
            android:text="@string/value_accountOld"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/submitBtn"
            android:textSize="18sp" android:layout_below="@+id/getDataBtn"
            android:layout_alignStart="@+id/textTop"/>
    <Button
            android:text="@string/value_accountNew"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/submitBtnNew"
            android:textSize="18sp"
            android:layout_alignEnd="@+id/textTop" android:layout_alignTop="@+id/submitBtn"/>
    <View
            android:layout_width="wrap_content"
            android:layout_height="1dp" android:layout_alignParentStart="true"
            android:id="@+id/view_bottom" android:layout_below="@+id/submitBtn"/>
    <TextView
            android:text="@string/textView_bottom_description"
            android:layout_width="349dp"
            android:layout_height="162dp"
            android:id="@+id/textView_bottom_description"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/view_bottom" android:layout_marginTop="27dp" android:textSize="18sp"/>

</RelativeLayout>
